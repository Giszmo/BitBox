{
  "name": "BitChrome",
  "description": "Allows to quickly get information on Bitoin addresses in any Webpage",
  "version" : "1.0.1",
  "background" : {
    "scripts": ["background.js"]
  },
  "icons" : {
    "16" : "sandwich-16.png",
    "48" : "sandwich-48.png",
    "128" : "sandwich-128.png"
  },

  "content_scripts" : [
    {
      "matches" : [ 
         "http://*/*",
         "https://*/*"
      ],

      "js" : [ "jquery-1.11.0.min.js",
              	"jquery.qtip.min.js",
               "content.js", 
               "contentscript.js" ],
      "css" : ["jquery.qtip.min.css",
      			"qrcode.min.js",
      			"bitchrome.css"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "manifest_version": 2
}
